<div class="modal" id="page-modal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">{{ modal_title }}</h5>
                <button type="button" class="close modal-close-button" data-bs-dismiss="modal" aria-label="Close"><i
                        class="fas fa-times modal-close-button-icon"></i></button>
            </div>
            <div class="modal-body">
                <p>{{ modal_body }}</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <a href="{{ modal_link }}"><button type="button" class="btn btn-{{ modal_button_type }}"
                        data-dismiss="modal">{{ modal_footer_button }}</button></a>
            </div>
        </div>
    </div>
</div>